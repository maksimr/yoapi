{
  "name": "@maksimr/yoapi",
  "version": "0.1.19",
  "main": "./dist/entities.js",
  "files": [
    "package.json",
    "dist/"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc --project tsconfig.build.json --declaration --outDir dist --noEmit false",
    "release": "npm version patch -m 'release: version %s' && git push && git push --tags",
    "generate": "node ./scripts/index.js",
    "test": "jest --passWithNoTests",
    "test:type": "tsc",
    "lint": "eslint lib/ scripts/"
  },
  "devDependencies": {
    "@babel/core": "7.12.9",
    "@babel/preset-env": "7.12.7",
    "@babel/eslint-parser": "7.12.1",
    "babel-loader": "8.2.2",
    "eslint": "7.14.0",
    "jest": "26.6.3",
    "jest-cli": "26.6.3",
    "typescript": "4.1.2",
    "@types/jest": "26.0.15"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "parserOptions": {
      "requireConfigFile": false,
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "jest": true,
      "describe": true,
      "it": true,
      "beforeEach": true,
      "beforeAll": true,
      "afterEach": true,
      "expect": true,
      "expectAsync": true
    },
    "rules": {
      "no-undef": "error",
      "semi": "error",
      "no-unused-vars": "error",
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireParamDescription": false,
          "requireReturnDescription": false
        }
      ]
    }
  }
}
